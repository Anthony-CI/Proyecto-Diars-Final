
@{
    ViewData["Title"] = "Electronica";
    Layout = null;
}

<div class="row">
    <label>Metodo de Pago</label>
    <select class="form-control" name="MetodoPagoId">
        <option value="value">Seleccione Metodo de Pago</option>
        @foreach (var item in ViewBag.MetodoPago)
        {
            <option value="@item.IdMetodoPago">@item.Nombre</option>
        }
    </select>
</div>
<div class="row">
    <label>Nombre</label>
    <input type="text" class="form-control" name="Nombre" value="@Model.Nombre" />
</div>
<div class="row">
    <label>Saldo Inicial</label>
    <input type="text" class="form-control" name="SaldoInicial" value="@Model.SaldoInicial" />
</div>
<div class="row">
    <label>Concepto</label>
    <input type="text" class="form-control" name="Concepto" value="@Model.Concepto" />
</div>

