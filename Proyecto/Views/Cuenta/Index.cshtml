
@using System.Linq
@model List<Proyecto.ViewModels.CuentaViewModel>
@{
    ViewData["Title"] = "Index";
    //INDEX DE CUENTA
    
}


    <header>

        <nav class="navbar navbar-light bg-light static-top">
            <div class="container">
                <a class="navbar-brand" href="#">Start Bootstrap </a>

            </div>
        </nav>

        <section class=" features-icons bg-light text-center">
            <div class="container">
                <div class="row">
                    <div class="btn-group mr-1">
                        <a type="button" class="btn btn-outline-primary" href="/Cuenta/Crear" role="button">Agregar Cuenta</a>
                    </div>
                    
                </div>
            </div>
            <p>

            </p>
            <p>

            </p>
            <div class="container">
                <div class="row mr-0">
                    <div class="col-lg-12">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Id</th>

                                    <th scope="col">Tipo Cuenta</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Entidad Emisora</th>
                                    <th scope="col">Metodo de Págo </th>

                                    <th scope="col">Saldo</th>

                                    <th scope="col">Gastos</th>
                                    <th scope="col">Transferencias</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cuentaModel in Model)
                                {
                                    <tr>
                                        <td>@cuentaModel.Cuenta.IdCuenta</td>

                                        <td>@cuentaModel.Cuenta.TipoCuenta.Nombre</td>
                                        <td>@cuentaModel.Cuenta.Nombre</td>
                                        <td>@cuentaModel.EntidadEmisora.Nombre</td>
                                        <td>@cuentaModel.MetodoPago.Nombre</td>

                                        <td>@cuentaModel.Cuenta.SaldoFinal</td>
                                        <td>
                                            <a type="button" class="btn btn-block btn-secondary" href="/Gasto/index?cuentaId=@cuentaModel.Cuenta.IdCuenta">Gastos</a>

                                        </td>
                                        <td>
                                            <a type="button" class="btn btn-block btn-secondary"href="/transferencias/index?cuentaId=@cuentaModel.Cuenta.IdCuenta">Trasnferencias</a>

                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>

                        <div class="container">
                            <div class="row">
                                <div class="btn-group mr-1">
                                    <button type="button" class="btn btn-block btn-success">Total  @Model.Aggregate(0m, (total, cuentaActual) => total + cuentaActual.Cuenta.SaldoFinal)</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>













