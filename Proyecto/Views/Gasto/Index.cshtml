@using System.Linq
@model Proyecto.Models.Cuenta
@{
    ViewData["Title"] = "Index";
    //INDEX DE GASTO
}


    <header>

        <nav class="navbar navbar-light bg-light static-top">
            <div class="container">
                <a class="navbar-brand" href="#">Start Bootstrap</a>

            </div>
        </nav>

        <section class=" features-icons bg-light text-center">
            <div class="container">
                <div class="row">
                    <div class="btn-group mr-1">
                        <a type="button" class="btn btn-outline-primary" href="/Gasto/Crear?cuentaId=@Model.IdCuenta" role="button">Agregar Gasto</a>
                    </div>

                </div>
            </div>
            <p>

            </p>
            <p>

            </p>
            <div class="container">
                <div class="row mr-0">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="btn-group mr-1">
                                <button type="button" class="btn btn-block btn-success">Saldo @Model.SaldoFinal </button>
                            </div>
                        </div>

                        
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Monto</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var gasto in Model.Gastos)
                                {
                                    <tr>

                                        <td>@gasto.Nombre</td>
                                        <td>@gasto.Monto</td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="container">
                            <div class="row">
                                <div class="btn-group mr-1">
                                    <button type="button" class="btn btn-block btn-success">Total @Model.TotalGastos </button>
                                </div>
                            </div>
                            <p>

                            </p>
                            <div class="row">
                                <a class="btn btn-primary" href="/cuenta/Index">Cancelar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>





























